<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel="stylesheet" href="{{ cssSrc }}"> {% include "head.njk" %}
    <!-- ** Scripts -->
    {% include "scripts.njk" %}
  </head>
  <body
    id="body">
    {# Fixed reference #}
    <div id="viewport"></div>
    {# Fade and blur bottom and top of viewport #}
    <div id="viewport-clip"></div>
    {# Scroll progress #}
    <div id="scroll-progress"></div>
    <main>
      {% block content %}
        {{ content | safe }}
      {% endblock %}
    </main>
    {% include 'partials/footer.njk' %}
  </body>
  <script content-type="text/javascript" src="{{ jsSrcBase }}"></script>
  <script content-type="text/javascript" src="{{ jsSrc }}"></script>
</html>